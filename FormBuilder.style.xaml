<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Base Styles for All Controls -->
    <Style x:Key="BaseTextBoxStyle" TargetType="TextBox">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="Margin" Value="5,3"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#CCCCCC"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="#333333"/>
        <Style.Triggers>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="#0078D4"/>
                <Setter Property="Background" Value="#F9F9F9"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="#666666"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="BaseLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="Foreground" Value="#333333"/>
        <Setter Property="Margin" Value="5,3"/>
        <Setter Property="Padding" Value="0,2"/>
    </Style>

    <Style x:Key="BaseCheckBoxStyle" TargetType="CheckBox">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="Foreground" Value="#333333"/>
        <Setter Property="Margin" Value="5,3"/>
        <Setter Property="Padding" Value="5,2"/>
    </Style>

    <Style x:Key="BaseComboBoxStyle" TargetType="ComboBox">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="Margin" Value="5,3"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#CCCCCC"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="#333333"/>
    </Style>

    <Style x:Key="BaseGroupBoxStyle" TargetType="GroupBox">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="#333333"/>
        <Setter Property="Margin" Value="5,8"/>
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#DDDDDD"/>
    </Style>

    <!-- NestedGroup Specific Styles (Font Size +5, Bold, Green Theme) -->
    <Style x:Key="NestedGroup.TextBox" TargetType="TextBox" BasedOn="{StaticResource BaseTextBoxStyle}">
        <Setter Property="FontSize" Value="19"/>  <!-- Base 14 + 5 -->
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="BorderBrush" Value="#28A745"/>
        <Setter Property="Background" Value="#F8FFF9"/>
        <Setter Property="Foreground" Value="#155724"/>
        <Style.Triggers>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="#20C997"/>
                <Setter Property="Background" Value="#E6FFED"/>
                <Setter Property="BorderThickness" Value="2"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="#1E7E34"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="NestedGroup.Label" TargetType="Label" BasedOn="{StaticResource BaseLabelStyle}">
        <Setter Property="FontSize" Value="19"/>  <!-- Base 14 + 5 -->
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#155724"/>
    </Style>

    <Style x:Key="NestedGroup.CheckBox" TargetType="CheckBox" BasedOn="{StaticResource BaseCheckBoxStyle}">
        <Setter Property="FontSize" Value="19"/>  <!-- Base 14 + 5 -->
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#155724"/>
    </Style>

    <Style x:Key="NestedGroup.ComboBox" TargetType="ComboBox" BasedOn="{StaticResource BaseComboBoxStyle}">
        <Setter Property="FontSize" Value="19"/>  <!-- Base 14 + 5 -->
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="BorderBrush" Value="#28A745"/>
        <Setter Property="Background" Value="#F8FFF9"/>
        <Setter Property="Foreground" Value="#155724"/>
    </Style>

    <Style x:Key="NestedGroup.GroupBox" TargetType="GroupBox" BasedOn="{StaticResource BaseGroupBoxStyle}">
        <Setter Property="FontSize" Value="19"/>  <!-- Base 14 + 5 -->
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#155724"/>
        <Setter Property="BorderBrush" Value="#28A745"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Background" Value="#F8FFF9"/>
    </Style>

</ResourceDictionary>
